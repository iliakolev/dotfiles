" *************************************
"
"   Ack
"   -> Integrata ack (grep replacement) into vim
"
" *************************************

Plug 'mileszs/ack.vim'

nmap <leader>ck :Ack!<space>
nmap <leader>cK :Ack!<up><cr>
nmap <leader>CK :Ack!<up><cr>

nnoremap K :Ack! '\b<C-r><C-w>\b'<cr>

let g:ackprg = 'ag --nogroup --nocolor --column'

" vim:ft=vim

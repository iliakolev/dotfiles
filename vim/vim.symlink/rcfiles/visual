" ====================================================
"   Visual configurations
" ====================================================

" Hightlight the current row
set cursorline

set textwidth=80
set colorcolumn=+1,+2,+3,+4

set t_Co=256
let g:solarized_termtrans = 1

set background=dark
if filereadable(expand("~/.vim/bundle/vim-colors-solarized/colors/solarized.vim"))
    colorscheme solarized
endif

" vim:ft=vim
